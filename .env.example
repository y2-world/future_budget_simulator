# ========================================
# Django Settings
# ========================================

# 開発環境: DEBUG=True
# 本番環境: DEBUG=False (必須)
DEBUG=False

# セキュリティキー（本番環境では必ず変更すること）
# 生成コマンド: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# 例: )#n)^ekm$fs3rj-s!nux16k%rzpp)_#j4)#!ltng_gw83-e!cd
SECRET_KEY=your-secret-key-here-change-in-production

# 許可するホスト名（カンマ区切り）
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-app.herokuapp.com

# ========================================
# Database
# ========================================

# 開発環境（Docker）: postgresql://postgres:postgres@db:5432/budget_simulator
# 本番環境（Heroku）: Herokuが自動設定（DATABASE_URL環境変数）
DATABASE_URL=postgresql://postgres:postgres@db:5432/budget_simulator

# ========================================
# Security Settings
# ========================================

# セッションCookieのSecure属性（HTTPS必須）
# 開発環境: False
# 本番環境: True (settings.pyで自動設定されるが、明示的に設定可能)
SESSION_COOKIE_SECURE=True

# ========================================
# Basic Authentication (Optional)
# ========================================

# Basic認証の有効化（本番環境で推奨）
BASIC_AUTH_ENABLED=True
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=change-this-strong-password
